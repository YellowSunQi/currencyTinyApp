page {
  height: 100%;
  overflow: hidden;
}

page>view {
  height: 100%;
}

.inputContainer {
  position: relative;
}

.cover {
  position: absolute;
  bottom: -30.5rem;
  width: 100%;
  height: 30.5rem;
  background-color: #fff;
  z-index: 2;
}

picker {
  position: relative;
}

.rangeCurrency {
  display: inline-block;
}

.searchIcon {
  vertical-align: bottom;
  display: inline-block;
  margin-left: 1rem;
  font-size: 0.5rem;
  text-align: center;
  height: 1.25rem;
  width: 1.25rem;
}

.searchBar {
  position: relative;
  display: inline-block;
  border-bottom: 1rpx solid green;
  width: 96%;
}
